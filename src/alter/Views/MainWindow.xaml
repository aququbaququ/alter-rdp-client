<Window x:Class="AlterApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlterApp.Views"
        xmlns:vm="clr-namespace:AlterApp.ViewModels"
        xmlns:cv="clr-namespace:AlterApp.Converters"
        xmlns:ap="clr-namespace:AlterApp.AttachedProperties"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Title="{Binding WindowTitle}"
        Width="1200" Height="800" MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        FontSize="14"
        FocusManager.FocusedElement="{Binding ElementName=RemoteComputerTextBox}">

    <Window.Resources>
        <cv:RdpClientConnectionStateConverter x:Key="rdpClientConnectionStateConverter"/>
        <cv:RdpClientDisconnectReasonConverter x:Key="rdpClientDisconnectReasonConverter"/>
        <cv:RdpClientDisconnectReasonDetailsConverter x:Key="rdpClientDisconnectReasonDetailsConverter"/>
        <cv:DisconnectReasonVisibilityConverter x:Key="disconnectReasonVisibilityConverter"/>
        <cv:DisconnectReasonDetailsVisibilityConverter x:Key="disconnectReasonDetailsVisibilityConverter"/>
    </Window.Resources>

    <Grid ShowGridLines="False">
        <Grid ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="18*"/>
                <RowDefinition Height="66*"/>
                <RowDefinition Height="16*"/>
            </Grid.RowDefinitions>

            <!-- Connection destination -->
            <TextBlock Grid.Row="0" Margin="28,0,28,0"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       IsEnabled="{Binding IsElementEnabled}"
                       TextAlignment="Center" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" FontSize="22" FontWeight="SemiBold"
                       Text="{Binding DestinationDisplayText}"/>

            <!-- Connection settings -->
            <Grid Grid.Row="1" Width="620" VerticalAlignment="Center" ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="55"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Remote computer -->
                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="7" Padding="0" Margin="0,0,0,4"
                       IsEnabled="{Binding IsElementEnabled}"
                       VerticalContentAlignment="Bottom" Content="_Remote computer"/>
                <TextBox x:Name="RemoteComputerTextBox"
                         Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7" Padding="6,0,6,0" Margin="0,0,2,0"
                         IsEnabled="{Binding IsElementEnabled}" TabIndex="0"
                         Style="{StaticResource RemoteComputerTextBox}"
                         VerticalContentAlignment="Center"
                         Text="{Binding RemoteComputer, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Remote port -->
                <Label Grid.Row="0" Grid.Column="7" Padding="0" Margin="0,0,0,4"
                       IsEnabled="{Binding IsElementEnabled}"
                       VerticalContentAlignment="Bottom" Content="_Port"/>
                <TextBox Grid.Row="1" Grid.Column="7" Padding="6,0,6,0" Margin="0,0,4,0"
                         IsEnabled="{Binding IsElementEnabled}" TabIndex="1"
                         Style="{StaticResource RemotePortTextBox}"
                         VerticalContentAlignment="Center" MaxLength="5"
                         Text="{Binding RemotePort, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- User name -->
                <Label Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="2" Padding="0" Margin="6,0,0,4"
                       IsEnabled="{Binding IsElementEnabled}"
                       VerticalContentAlignment="Bottom"  Content="_User name"/>
                <TextBox Grid.Row="1" Grid.Column="8" Grid.ColumnSpan="2" Padding="6,0,6,0" Margin="6,0,0,0"
                         IsEnabled="{Binding IsElementEnabled}" TabIndex="2"
                         Style="{StaticResource DefaultTextBox}"
                         VerticalContentAlignment="Center"
                         Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- User provided window title -->
                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="10" Padding="0" Margin="0,0,0,4"
                       IsEnabled="{Binding IsElementEnabled}"
                       VerticalContentAlignment="Bottom"  Content="_Window title"/>
                <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="10" Padding="6,0,6,0" Margin="0,0,0,0"
                         IsEnabled="{Binding IsElementEnabled}" TabIndex="3"
                         Style="{StaticResource DefaultTextBox}"
                         VerticalContentAlignment="Center"
                         Text="{Binding UserProvidedWindowTitle, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Select from history -->
                <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Hyperlink IsEnabled="{Binding IsElementEnabled}" Command="">Select from history (Not implemented yet)</Hyperlink>
                </TextBlock>

                <!-- Connect button -->
                <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="10" Padding="0,10,0,10" Margin="0,0,0,0"
                        Width="200" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                        IsEnabled="{Binding IsElementEnabled}" TabIndex="4"
                        Style="{StaticResource DefaultButton}"
                        IsDefault="True"
                        Content="Connect"
                        Command="{Binding ConnectToRemoteComputerCommand}"/>
            </Grid>

            <!-- Connection status -->
            <ContentPresenter Grid.Row="2"
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              IsEnabled="{Binding IsElementEnabled}"
                              Content="{Binding}">
                <!-- Presentations -->
                <ContentPresenter.Resources>
                    <DataTemplate x:Key="ConnectionStateOnly">
                        <StackPanel HorizontalAlignment="Center">
                            <!-- Connection state -->
                            <TextBlock TextAlignment="Center"
                                       Text="{Binding RdpClientConnectionState, Mode=OneWay, Converter={StaticResource rdpClientConnectionStateConverter}}"/>
                        </StackPanel>
                    </DataTemplate>
                    <DataTemplate x:Key="ConnectionStateWithDisconnectReason">
                        <StackPanel HorizontalAlignment="Center">
                            <!-- Connection state -->
                            <TextBlock TextAlignment="Center"
                                       Text="{Binding RdpClientConnectionState, Mode=OneWay, Converter={StaticResource rdpClientConnectionStateConverter}}"/>
                            <!-- Disconnect reason -->
                            <Border Padding="8,4,8,4" Margin="0,10,0,0" SnapsToDevicePixels="True"
                                    Background="#fff8c5" BorderThickness="1" BorderBrush="#66d4a72c" CornerRadius="4">
                                <StackPanel>
                                    <!-- Disconnect reason -->
                                    <TextBlock Visibility="{Binding ShouldShowDisconnectReasonDetails, Mode=OneWay, Converter={StaticResource disconnectReasonVisibilityConverter}}"
                                               TextAlignment="Center"
                                               Text="{Binding RdpClientLastDisconnectReason, Mode=OneWay, Converter={StaticResource rdpClientDisconnectReasonConverter}}">
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleDisconnectReasonDetailsVisibilityCommand}"/>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                    <!-- Disconnect reason details -->
                                    <TextBlock Visibility="{Binding ShouldShowDisconnectReasonDetails, Mode=OneWay, Converter={StaticResource disconnectReasonDetailsVisibilityConverter}}"
                                               TextAlignment="Center"
                                               Text="{Binding RdpClientLastDisconnectReason, Mode=OneWay, Converter={StaticResource rdpClientDisconnectReasonDetailsConverter}}">
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleDisconnectReasonDetailsVisibilityCommand}"/>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ContentPresenter.Resources>
                <!-- Triggers -->
                <ContentPresenter.Style>
                    <Style TargetType="{x:Type ContentPresenter}">
                        <Setter Property="ContentTemplate" Value="{StaticResource ConnectionStateOnly}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShouldShowDisconnectReason}" Value="True">
                                <Setter Property="ContentTemplate" Value="{StaticResource ConnectionStateWithDisconnectReason}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentPresenter.Style>
            </ContentPresenter>
        </Grid>

        <!-- RDP client -->
        <ContentControl Visibility="{Binding RdpClientHostVisibility}" Background="{StaticResource RdpClientAreaBackground}"
                        ap:SizeObservation.IsEnabled="True"
                        ap:SizeObservation.ObservedActualWidth="{Binding RdpClientHostWidth, Mode=OneWayToSource}"
                        ap:SizeObservation.ObservedActualHeight="{Binding RdpClientHostHeight, Mode=OneWayToSource}"
                        Content="{Binding RdpClientHost}"/>
    </Grid>
</Window>
