<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="RdpClientAreaBackground" Color="#000000"/>
    <Style TargetType="Button" x:Key="DefaultButton">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style TargetType="TextBox" x:Key="DefaultTextBox">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style TargetType="TextBox" x:Key="DefaultMultilineTextBox">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4"/>
                <!-- "Padding" is need for the clear rounded corner line when scrollbar showing -->
                <Setter Property="Padding" Value="0.6"/>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>
