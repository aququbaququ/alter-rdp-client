<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="RdpClientAreaBackground" Color="#000000"/>
    <Style TargetType="Button" x:Key="DefaultButton">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4" />
            </Style>
        </Style.Resources>
    </Style>
    <Style TargetType="TextBox" x:Key="DefaultTextBox">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4" />
            </Style>
        </Style.Resources>
    </Style>
    <Style TargetType="TextBox" x:Key="RemoteComputerTextBox">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4 0 0 4" />
            </Style>
        </Style.Resources>
    </Style>
    <Style TargetType="TextBox" x:Key="RemotePortTextBox">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="0 4 4 0" />
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>
